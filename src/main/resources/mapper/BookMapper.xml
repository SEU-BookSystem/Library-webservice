            </when>
            <otherwise>
            </otherwise>
        </choose>
        <choose>
            <when test=" second_category_id!=''">
                and second_category_id=#{second_category_id}
            </when>
            <otherwise>
            </otherwise>
        </choose>
        <choose>
            <when test="year !=''">
                and year(print_time)=#{year}
